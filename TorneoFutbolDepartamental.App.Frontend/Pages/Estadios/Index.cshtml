@page
@model TorneoFutbolDepartamental.App.Frontend.pages.Estadios.IndexModel
@{
}
<h1>Listado de Estadios</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Ciudad</th>
            <th scope="col">Municipio</th>
            <th scope="col">Acciones</th>
        </tr>   
    </thead>
    <tbody>
        @foreach (var estadio in Model.estadios)
        {
            <tr>
                <td>@estadio.Nombre</td>
                <td>@estadio.Direccion</td>
                <td>@estadio.Ciudad</td>
                <td>@estadio.Municipio</td>
                <td><a class="btn btn-primary" asp-page="./Details" asp-route-Estadioid="@estadio.EstadioId">Detalles</a></td>
            </tr>
        }
    </tbody>
</table>